{
    "name": "riinakw/remix",
    "description": "Remix framework",
    "type": "library",
    "minimum-stability": "stable",
    "license": "proprietary",
    "authors": [{
        "name": "Riina K.",
        "email": "riinak.tv@gmail.com"
    }],
    "require": {
        "php": ">=7.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "phpmd/phpmd": "@stable",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Remix\\": "src/",
            "App\\": "demo/app/"
        }
    },
    "scripts": {
        "phpmd": [
            "sh vendor/bin/phpmd . text cleancode,codesize,controversial,design,naming,unusedcode phpmd.xml  --exclude \"*/vendor/*,*/tmp/*\""
        ],
        "phpcs": [
            "sh vendor/bin/phpcs ."
        ],
        "phpunit": [
            "sh vendor/bin/phpunit"
        ]
    }
}
