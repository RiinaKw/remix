{
    "name": "riinakw/remix",
    "description": "Remix framework",
    "type": "library",
    "minimum-stability": "stable",
    "license": "proprietary",
    "authors": [{
        "name": "Riina K.",
        "email": "riinak.tv@gmail.com"
    }],
    "require": {
        "php": ">=7.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "8.*",
        "phpmd/phpmd": "@stable",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Remix\\": "src/classes/Remix",
            "Utility\\": "src/classes/Utility",
            "App\\": "demo/app/classes"
        }
    },
    "scripts": {
        "phpmd": [
            "sh vendor/bin/phpmd . text phpmd.xml cleancode,codesize,controversial,design,naming,unusedcode --exclude vendor"
        ],
        "phpcs": [
            "sh vendor/bin/phpcs ."
        ],
        "phpunit": [
            "sh vendor/bin/phpunit"
        ]
    }
}
